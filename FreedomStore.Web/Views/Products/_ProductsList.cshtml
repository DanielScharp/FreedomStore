@model IEnumerable<FreedomStore.Domain.Product.Product>

@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />

@foreach(var item in Model)
{
    <div class="overflow-hidden rounded-md hover:shadow-md transition-shadow border @(item.IsActive ? "opacity-50" : "")">
        <div class="relative">
            <img src="@item.ImageUrl" class="w-full h-32 sm:h-40 object-cover" />

            @if(item.Discount > 0)
            {
                <div class="absolute top-2 left-2 bg-yellow-400 text-black px-2 py-1 rounded-md text-xs font-medium">
                    @item.Discount% Off
                </div>
            }
        </div>
        <div class="p-3">
            <h4 class="text-sm mb-2 min-h-[3.5rem]">@item.Name</h4>
            <div class="flex justify-between items-center mb-3">
                <div class="flex flex-col">
                    @if(item.Discount > 0)
                    {
                        <span class="text-green-600 font-bold text-lg">@((item.Price * (1 - (item.Discount / 100))).ToString("N2"))</span>
                        <span class="text-gray-400 line-through text-sm">@item.Price.ToString("N2")</span>
                    }
                    else
                    {
                        <span class="text-green-600 font-bold text-lg">@item.Price.ToString("N2")</span>
                        <span class="text-gray-400 text-sm">&nbsp;</span>

                    }
                </div>
                <div class="flex items-center gap-1">
                    <i class="fa-solid fa-seedling text-green-500"></i>
                    <span class="text-xs text-gray-500">Veg</span>
                </div>
            </div>

            <div class="flex items-center justify-between">
                <button variant="outline" size="icon" class="rounded-full h-8 w-8 border rounded-full!" onClick={handleDecrement}>
                    <i class="fa-solid fa-minus"></i>
                </button>
                <span class="font-medium px-3">@item.StockQuantity</span>
                <button variant="outline" size="icon" class="rounded-full h-8 w-8 border rounded-full!" onClick={handleIncrement}>
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>
        </div>
    </div>
}